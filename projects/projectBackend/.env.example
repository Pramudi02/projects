# Application Settings
APP_NAME=Portfolio Projects
DEBUG_MODE=true

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log
